{
  "name": "@maiar-ai/maiar-starter",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "dev": "chokidar '../.build-complete' 'src/**/*.ts' --initial --verbose -c 'pnpm build && pnpm run restart'",
    "restart": "node ../restart.js",
    "build": "tsc --project tsconfig.json",
    "clean": "rm -rf dist data logs",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@maiar-ai/core": "workspace:*",
    "@maiar-ai/memory-sqlite": "workspace:*",
    "@maiar-ai/model-openai": "workspace:*",
    "@maiar-ai/monitor-console": "workspace:*",
    "@maiar-ai/monitor-websocket": "workspace:*",
    "@maiar-ai/plugin-character": "workspace:*",
    "@maiar-ai/plugin-express": "workspace:*",
    "@maiar-ai/plugin-search": "workspace:*",
    "@maiar-ai/plugin-telegram": "workspace:*",
    "@maiar-ai/plugin-terminal": "workspace:*",
    "@maiar-ai/plugin-text": "workspace:*",
    "@maiar-ai/plugin-time": "workspace:*",
    "@maiar-ai/plugin-x": "workspace:*",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "telegraf": "4.16.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "chokidar-cli": "3.0.0",
    "dotenv-cli": "8.0.0",
    "tsup": "8.3.6",
    "typescript": "5.7.3"
  }
}
